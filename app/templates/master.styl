@import 'styles/media'

.font-header
	font-weight:bold
	text-shadow: 1px 1px 2px black

	&.font-header-0
		font-family: 'Palatino Linotype', 'Book Antiqua', Palatino, serif
	&.font-header-1
		font-family: Impact, Charcoal, sans-serif
	&.font-header-2
		font-family: Tahoma, Geneva, sans-serif
	&.font-header-3
		font-family: 'Lucida Sans Unicode', 'Lucida Grande', sans-serif
	&.font-header-4
		font-family: 'Arial Black', Gadget, sans-serif
	&.font-header-5
		font-family: 'Times New Roman', Times, serif

	& *
		font-weight:inherit
		font-family:inherit

html,body
	height:100%
	width:100%

.swiper-container
.swiper-slide
	width  : 100%
	height : 100%

.row-full
	max-width: 100% !important

.magazine-container
	position:relative
	width  : 100%
	height : 100%
	p
		text-align : justify 
	

	& > main
		height: inherit
		position:relative
		background              : transparent no-repeat top center
		-webkit-background-size : cover
		-moz-background-size    : cover
		-o-background-size      : cover
		background-size         : cover
		text-align 				: justify !important

	& footer
		position      : absolute
		bottom        : 0
		right         : 0
		margin-right  : 1em
		margin-bottom : 1em

		& *
			color: white
			margin:0
			padding:0

	&.magazine-cover

		header
			height     : 20%
			position   : relative
			background : white
			width      : inherit
			background: white no-repeat left center
			background-image: url('http://tryimg.com/5/peque.png')
			background-size: contain
			border: 1em solid white
		main
			height: 80%

		footer
			&
			& *
				font-weight:bold
				

ul {
  list-style: none;
}
ul li {
  padding: 0.2em
}

label.styled {
  background-color: #f8a901;
  display: block;
  width: 300px;
  text-align: center;
  padding: 0.6em 2em;
  color: #fff;
  transition: all 0.4s ease;
  position: relative;
  overflow: hidden;
  cursor: pointer;
}
label.styled:before {
  content: 'âœ“';
  line-height: 40px;
  font-size: 25px;
  color: #fff;
  width:40px;
  height:100%; 
  background-color: #9a5502;
  position: absolute;
  top:0;
  left:100%;
  transition: all 0.4s ease;
  opacity: 0;
  border-right: 2px solid #fff;
}
label.styled:hover:before {
  left: 98%;
  opacity: .3;
}
input.styled {
  display: none;
}

/* :: CHECKED :: */
input.styled:checked ~ label.styled {
  background-color: #f88701;
  animation: throw 0.5s linear;
}
input.styled:checked ~ label.styled:before {
  left:0px;
  opacity: 1;
}
@keyframes throw {
   0%,63% {margin-left: 0;}
   64% {margin-left: -5px;}
   100% {margin-left: 0;}
}
 