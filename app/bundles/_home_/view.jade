			main.show-for-landscape-large-up(style="background-image:url(//lorempixel.com/1280/960/animals)")
			main.show-for-portrait-small-only(style="background-image:url(//lorempixel.com/240/320/animals)")
			main.show-for-portrait-medium-only(style="background-image:url(//lorempixel.com/480/640/animals)")
			main.show-for-portrait-large-up(style="background-image:url(//lorempixel.com/960/1280/animals)")
			- var rand = Math.floor(Math.random()*6)
			footer.font-header(class='font-header-'+rand)
