.swiper-container: .swiper-wrapper

	.swiper-slide

		.magazine-cover.magazine-container
			header
			main.show-for-landscape-small-only(style="background-image:url(//placekitten.com/g/320/140)")
			main.show-for-landscape-medium-only(style="background-image:url(//placekitten.com/g/640/480)")
			main.show-for-landscape-large-up(style="background-image:url(//placekitten.com/g/1280/960)")
